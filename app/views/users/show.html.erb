    <button id="your_posts">あなたのアイデア</button>
    <button id="liked_posts">いいね</button>
    <button id="favorite">興味があること</button>
  </div>
  --->
</div>
  <div class="posts">
    <% @user.posts.each do |post| %>
    <div class="post">
      <div class="link">
        <a href="/posts/<%= post.id %>}"></a>
      </div>
      <div class="author">
        <img src="<%= "/user_images/#{@user.image_name}" %>">
        <h2><%= link_to(post.author,"/users/#{post.author_id}") %></h2>
      </div>
      <p><%= post.title %></p>
    </div>
    <% end %>
  </div>
</div>
