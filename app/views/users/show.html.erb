<div class="contents">
<div class="show_sec">
  <img src="<%= "/user_images/#{@user.image_name}" %>">
  <h2><%= @user.name%></h2>
  <% if @user.id == @current_user.id %>
  <%= link_to("編集", "/users/#{@current_user.id}/edit", class: 'edit') %>
  <% end %>
